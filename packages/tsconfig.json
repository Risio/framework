{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "esnext",
    "noUnusedLocals": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/test/**"
  ]
}
