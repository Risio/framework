
{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "esnext",
    "noUnusedLocals": true,
    "lib": ["esnext"],
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
        "@risio/*": ["../../risio-*"]
    }
  },
  "include": [
      "src/**/*",
      "test/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
