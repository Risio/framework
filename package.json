{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/risio/framework.git"
  },
  "scripts": {
    "build": "lerna run --parallel build",
    "build-watch": "lerna run --parallel build-watch",
    "test": "npm run clean && lerna run --parallel test",
    "test-watch": "lerna run --parallel --stream test-watch",
    "postinstall": "lerna exec --parallel 'npm install' && lerna bootstrap && lerna run build",
    "publish": "lerna publish",
    "changelog": "lerna-changelog --tag-from=v0.0.23 > CHANGELOG.md",
    "playground": "lerna bootstrap && lerna exec --scope=playground -- npm start",
    "start": "npm run playground"
  },
  "devDependencies": {
    "lerna": "^2.9.0"
  },
  "dependencies": {
    "gh-pages": "^1.1.0",
    "lerna-changelog": "^0.7.0"
  }
}
